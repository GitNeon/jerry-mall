.nav-bar {
  --weui-FG-0:rgba(0,0,0,.9);
  --height: 44px;
  --left: 10px;
}

.nav-bar {
  overflow: hidden;
  color: var(--weui-FG-0);
  flex: none;
}

.nav-bar__inner {
  position: relative;
  top: 0;
  left: 0;
  height: calc(var(--height) + env(safe-area-inset-top));
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-top: env(safe-area-inset-top);
  width: 100%;
  box-sizing: border-box;
}

.nav-bar__left {
  position: relative;
  padding-left: var(--left);
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  height: 100%;
  box-sizing: border-box;
}

.nav-btn-container {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
}

.back-btn:active,
.home-btn:active {
  opacity: 0.5;
}

.back-btn {
  width: 16px;
  height: 24px;
  transform: translateY(1px);
  margin-right: 20px;
}

.home-btn {
  width: 24px;
  height: 24px;
}

.nav-bar__center {
  font-size: 17px;
  text-align: center;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  flex: 1;
  height: 100%;
}

.nav-bar__loading {
  margin-right: 4px;
  align-items: center;
}

